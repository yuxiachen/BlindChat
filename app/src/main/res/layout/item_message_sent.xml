<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp">

    <TextView
        android:id="@+id/time_item_message_sent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="6dp"
        android:text="11:00"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/message_item_message_sent"
        app:layout_constraintRight_toLeftOf="@+id/message_item_message_sent"/>
    <TextView
        android:id="@+id/message_item_message_sent"
        android:layout_width="wrap_content"
        android:maxWidth="240dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@drawable/rounded_rectangle_blue"
        android:text="sent messages here"
        android:padding="10dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginRight="16dp"
        android:textColor="@android:color/white"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

</android.support.constraint.ConstraintLayout>