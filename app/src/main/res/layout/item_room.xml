<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/name_item_room"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Room Name"
        android:textSize="22dp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <TextView
        android:id="@+id/school_item_room"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="scu"
        android:textSize="18dp"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name_item_room"/>
    <TextView
        android:id="@+id/person_joined_item_room"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Member live:"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/school_item_room"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <TextView
        android:id="@+id/member_num_item_room"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toRightOf="@id/person_joined_item_room"
        app:layout_constraintBaseline_toBaselineOf="@+id/person_joined_item_room"
        />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/colorGrey"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/member_num_item_room"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>


</android.support.constraint.ConstraintLayout>